generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  username    String   @unique
  nickname    String?
  password    String
  role        Plan     @default(FREE)

  parties     Party[]
  votetimes   Votetime[]
}

model Party {
  id          Int      @id @default(autoincrement())
  datetime    Json

  votetimes   Votetime[]
  
  creator     User     @relation(fields: [userId], references: [id])
  userId      Int

}

model Votetime {
  id         Int      @id @default(autoincrement())
  creatorName String
  creator     User?   @relation(fields: [userId], references: [id])
  userId      Int?

  partyAt     Party   @relation(fields: [partyid], references: [id])
  partyid     Int
}

enum Plan {
  FREE
  MEMBER
}