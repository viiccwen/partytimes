generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  username    String   @unique
  nickname    String?
  password    String
  role        Plan     @default(FREE)

  parties     Party[]
  votetimes   Votetime[]
}

model Party {
  id          Int      @id @default(autoincrement())
  partyid     String   @unique
  title       String
  description String

  status      Boolean @default(false)

  date        String[]
  start_time  Int
  start_ampm  String
  end_time    Int
  end_ampm    String

  votetimes   Votetime[]
  
  creator     User     @relation(fields: [userId], references: [id])
  userId      Int

}

model Votetime {
  id         Int      @id @default(autoincrement())
  creatorName String

  vote_json   Json[] // one votetime to many time slots
  // json format: { date: "2021-10-10", start_time: "10:00", start_ampm: "am", end_time: "6:00", end_ampm: "pm" }

  creator     User?   @relation(fields: [userId], references: [id])
  userId      Int?

  partyAt     Party   @relation(fields: [partyid], references: [id])
  partyid     Int
}

enum Plan {
  FREE
  MEMBER
}